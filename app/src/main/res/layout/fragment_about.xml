<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:id="@+id/top_view_background"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#607D8B"/>

    <View
        android:layout_below="@id/top_view_background"
        android:id="@+id/bottom_view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#455A64" />


    <TextView
        android:id="@+id/name"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop Cosmin Horatiu"
        android:layout_below="@id/profile_image"/>

    <TextView
        android:id="@+id/adress"
        android:textColor="#B2EBF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:text="Targu Mures, jud. Mures"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/phone"
        android:textColor="#B2EBF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adress"
        android:text="+40 744 268 931"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/email"
        android:textColor="#B2EBF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:text="cosmion95@gmail.com"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/roboto_regular"
        android:padding="15dp"
        android:text="Eager to learn, self-driven and passionate about computers and technology, my biggest dream is to become an Android developer. I am determined and motivated to achieve my dream and I am ready to give 110% to make that dream real."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />



    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:src="@drawable/portrait"
        app:civ_border_color="#757575"
        app:civ_border_width="3dp" />

    <!--<ImageView-->
        <!--android:layout_width="212dp"-->
        <!--android:layout_height="241dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginBottom="23dp"-->
        <!--android:src="@drawable/android" />-->

    <ImageView
        android:layout_width="249dp"
        android:layout_height="246dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:src="@drawable/android2" />


</RelativeLayout>